[Unit]
Description=RPKI Validator
After=network.target

[Service]
Environment=JAVA_CMD=/usr/bin/java
Environment=CONFIG_DIR=/opt/rpki-validator-3/conf
Environment=JAR=/opt/rpki-validator-3/rpki-validator-3.jar
ExecStart=/opt/rpki-validator-3/scripts/rpki-validator-3.sh

# prevent restart in case there's a problem
# with the database or binding to socket
RestartPreventExitStatus=7

# restart on OOM
RestartForceExitStatus=3

User=rpki
Group=rpki

[Install]
WantedBy=multi-user.target